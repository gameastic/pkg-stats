{
    "name": "pkg-stats",
    "version": "1.0.0",
    "author": "https://github.com/gameastic",
    "license": "MIT",
    "private": true,
    "scripts": {
        "start": "npx turbo run start --filter=example",
        "build": "npx turbo run build --filter=!example",
        "test": "npx turbo run test --filter=!example",
        "lint": "npx turbo run lint --filter=!example",
        "clean": "npx turbo run clean --filter=!example",
        "prepare": "npx husky install",
        "graph": "npx nx graph --port=8081",
        "bump": "npx changeset",
        "prepublish": "npx turbo run prepublish --filter=!example --concurrency=1",
        "publish": "npm run build && npx changeset publish"
    },
    "workspaces": {
        "packages": [
            "packages/*"
        ]
    },
    "devDependencies": {
        "prettier": "^2.8.8",
        "eslint": "^8.40.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-config-standard-with-typescript": "^34.0.1",
        "@typescript-eslint/parser": "^5.59.5",
        "@typescript-eslint/eslint-plugin": "^5.59.5",
        "typescript": "^5.0.4",
        "rimraf": "^5.0.0",
        "jest": "^29.5.0",
        "ts-jest": "^29.1.0",
        "nx": "^16.2.1",
        "turbo": "^1.9.8",
        "@changesets/cli": "^2.26.1",
        "@types/jest": "^29.5.1",
        "husky": "^8.0.3"
    }
}
